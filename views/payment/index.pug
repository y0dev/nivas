extends ../base

block content
  .container.px-5.py-24.mx-auto.flex.flex-wrap.items-center.min-h-screen.justify-center
    .w-full.mx-auto.rounded-lg.shadow-lg.p-5.text-gray-700(
      style="max-width: 600px"
    ) 
      .w-full.pt-1.pb-5
        .bg-primary.text-white.overflow-hidden.rounded-full.w-20.h-20.-mt-16.mx-auto.shadow-lg.flex.justify-center.items-center
          i.bx.bx-credit-card.text-3xl

      h1.text-center.mb-10.font-bold.text-xl.uppercase Secure payment info
      .price-container.mb-3.flex
        label.font-bold.text-sm.ml-1 Price
        p#price.text-xl.font-bold.text-left.text-primary $100

      form.form--payment
        .form__group.relative.mb-3.flex.-mx-2
          .px-2
            label.flex.items-center.cursor-pointer(for="type1")
              input#type1.form-radio.h-5.w-5.text-primary(
                type="radio",
                name="type",
                checked=""
              )
              img.h-8.ml-3(src="/img/payment-list.png")
          .px-2
            label.flex.items-center.cursor-pointer(for="type2")
              input#type2.form-radio.h-5.w-5.text-primary(
                type="radio",
                name="type"
              )
              img.h-8.ml-3(src="/img/paypal-card.png")
        .form__group.relative.mb-3
          label.font-bold.text-sm.mb-2.ml-1 Name on card
          input.w-full.px-3.py-2.mb-1.border-2.border-gray-200.rounded-md.transition-colors(
            class="focus:outline-none focus:border-primary",
            placeholder="John Smith",
            type="text"
          )

        .form__group.relative.mb-3
          label.font-bold.text-sm.mb-2.ml-1 Card number
          input.w-full.px-3.py-2.mb-1.border-2.border-gray-200.rounded-md.transition-colors(
            class="focus:outline-none focus:border-primary",
            placeholder="0000 0000 0000 0000",
            type="text"
          )
        .form__group.relative.mb-3.-mx-2.flex.items-end
          .px-2(class="w-1/2")
            label.font-bold.text-sm.mb-2.ml-1 Expiration date
            select.form-select.w-full.px-3.py-2.mb-1.border-2.border-gray-200.rounded-md.transition-colors.cursor-pointer(
              class="focus:outline-none focus:border-primary"
            )
              option(value="01") 01 - January
              option(value="02") 02 - February
              option(value="03") 03 - March
              option(value="04") 04 - April
              option(value="05") 05 - May
              option(value="06") 06 - June
              option(value="07") 07 - July
              option(value="08") 08 - August
              option(value="09") 09 - September
              option(value="10") 10 - October
              option(value="11") 11 - November
              option(value="12") 12 - December
          .px-2(class="w-1/2")
            select.form-select.w-full.px-3.py-2.mb-1.border-2.border-gray-200.rounded-md.transition-colors.cursor-pointer(
              class="focus:outline-none focus:border-primary"
            )
              option(value="2023") 2023
              option(value="2024") 2024
              option(value="2025") 2025
              option(value="2026") 2026
              option(value="2027") 2027
              option(value="2028") 2028
              option(value="2029") 2029
              option(value="2030") 2030
              option(value="2031") 2031
              option(value="2032") 2032
        .form__group.relative.mb-10
          label.font-bold.text-sm.mb-2.ml-1 Security code
          div
            input.w-32.px-3.py-2.mb-1.border-2.border-gray-200.rounded-md.transition-colors(
              class="focus:outline-none focus:border-primary",
              placeholder="000",
              type="text"
            )
        .form__group.relative
          button.relative.flex.h-11.w-full.items-center.justify-center.px-6(
            class="before:absolute before:inset-0 before:rounded-full before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95"
          ) 
            span.relative.text-base.font-semibold.text-white
              i.bx.bx-lock.mr-1
              |
              | PAY NOW
