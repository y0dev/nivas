header.bg-gray-900.text-tc-primary.body-font
  nav.bg-white.border-gray-200
    .max-w-screen-xl.flex.flex-wrap.relative.items-center.justify-between.mx-auto.p-4
      a.flex.items-center.pl-4(href="/", class="md:pl-8")
        img.h-10.mr-3(src="/img/brand-logo.png", alt="brand-logo")
        h3.text-2xl.font-bold.text-gray-900 Urban Insight Inc.

      input#toggle_nav.hidden.peer(
        aria-hidden="true",
        type="checkbox",
        name="toggle_nav"
      )
      // Menu
      .flex.items-center(class="md:order-2")
        button#user-menu-button.hidden.flex.mr-3.text-sm.bg-gray-800.relative.rounded-full(
          type="button",
          class="md:mr-0 focus:ring-4 focus:ring-gray-300",
          aria-expanded="false",
          data-dropdown-toggle="user-dropdown",
          data-dropdown-placement="bottom"
        )
          span.sr-only Open user menu
          img.w-8.h-8.rounded-full(src="/img/70x70.jpg", alt="user photo")
          // User drop down
          #user-dropdown.absolute.float-left.z-50.hidden.my-4.text-base.list-none.bg-white.divide-y.divide-gray-100.rounded-lg.shadow.text-left.top-5.right-0
            .px-4.py-3
              span#user-name.block.text-sm.text-gray-900 John Doe
              span#user-email.block.text-sm.text-gray-500.truncate name@flowbite.com
            ul.py-2(aria-labelledby="user-menu-button")
              li
                .flex.justify-between.px-4.py-2.text-sm.text-gray-700(
                  href="/search",
                  class="hover:text-yellow-400"
                ) 
                  .information Coins
                    |
                    i.bx.bxs-coin-stack.text-yellow-300
                  span.coin-balance.ml-4 100
              li
                a.block.px-4.py-2.text-sm.text-gray-700(
                  href="/search",
                  class="hover:bg-gray-100"
                ) Search Properties
              li
                a.block.px-4.py-2.text-sm.text-gray-700(
                  href="settings",
                  class="hover:bg-gray-100"
                ) Settings
              li
                a#logout-btn.block.px-4.py-2.text-sm.text-gray-700(
                  href="#",
                  class="hover:bg-gray-100"
                ) Sign out
        // Menu Button
        .relative.flex.max-h-10.items-center.z-20(class="md:hidden")
          label#hamburger.relative.-mr-6.p-6(role="button", for="toggle_nav")
            #line.m-auto.w-5.rounded.bg-sky-900.transition.duration-300(, class="h-0.5")
            #line2.m-auto.mt-2.w-5.rounded.bg-sky-900.transition.duration-300(
              ,
              class="h-0.5"
            ) 
      // Change to dropdown
      .fixed.z-10.inset-0.h-screen.w-screen.backdrop-blur-2xl.origin-bottom.scale-y-0.transition.duration-500(
        aria-hidden="true",
        class="bg-white/70 peer-checked:origin-top peer-checked:scale-y-100 md:hidden"
      )
      .flex-col.z-20.flex-wrap.gap-6.p-8.rounded-3xl.border.border-gray-100.bg-white.shadow-2xl.justify-end.w-full.invisible.opacity-0.translate-y-1.absolute.top-full.left-0.transition-all.duration-300.scale-95.origin-top(
        class="shadow-gray-600/10 md:relative md:scale-100 md:peer-checked:translate-y-0 md:translate-y-0 md:flex md:flex-row md:items-center md:gap-0 md:p-0 md:bg-transparent md:w-7/12 md:visible md:opacity-100 md:border-none peer-checked:scale-100 peer-checked:opacity-100 peer-checked:visible md:shadow-none"
      )
        .w-full.text-gray-600(class="md:w-auto md:pr-4 md:pt-0")
          ul.flex.flex-col.gap-6.tracking-wide(class="md:flex-row md:gap-0 md:text-sm")
            li
              a#login-btn.block.transition(
                href="/login",
                class="hover:text-primary md:px-4"
              ) 
                span Login
            li
              a#sign-up-btn.block.transition(
                href="/signup",
                class="hover:text-primary md:px-4"
              ) 
                span Sign up
