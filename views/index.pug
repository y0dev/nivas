                form.form--contact
                    .form__group.relative.mb-4
                        label.form__label.leading-7.text-sm(for='name') Full Name
                        input#name.form__input.w-full.bg-white.rounded.border.border-gray-300.text-base.outline-none.py-1.px-3.leading-8.transition-colors.duration-200.ease-in-out(type='text', placeholder='Full Name', required)
                    .form__group.relative.mb-4
                        label.form__label.leading-7.text-sm(for='email') Email address
                        input#email.form__input.w-full.bg-white.rounded.border.border-gray-300.text-base.outline-none.py-1.px-3.leading-8.transition-colors.duration-200.ease-in-out(type='email', placeholder='you@example.com', required)
                    .form__group.relative.mb-4
                        label.form__label.leading-7.text-sm(for='phone') Phone Number
                        input#phone.form__input.w-full.bg-white.rounded.border.border-gray-300.text-base.outline-none.py-1.px-3.leading-8.transition-colors.duration-200.ease-in-out(type='phone', placeholder='555-555-5555' required)
                    .form__group.relative.mb-4
                        label.form__label.leading-7.text-sm(for='message') Subject
                        textarea#message.form__input.w-full.bg-white.rounded.border.border-gray-300.h-32.text-base.outline-none.text-gray-700.py-1.px-3.resize-none.leading-6.transition-colors.duration-200.ease-in-out(placeholder='Message') 
                    .form__group
                        button.btn.bg-main-900.text-white.border-0.py-2.px-6.rounded.text-lg Send Message
            
                    