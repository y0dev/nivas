                        a.text-primary.leading-relaxed(href="#") contact@urbaninsightinc.com 
                        //- h2.title-font.font-semibold.text-gray-900.tracking-widest.text-xs.mt-4 Phone
                        //- p.leading-relaxed 123-456-7890

            .contact-container(class="group p-6 mt-4 sm:mt-0 sm:p-8 md:w-1/2 w-full rounded-3xl bg-white border border-gray-100 bg-opacity-50 shadow-2xl shadow-gray-600/10")
                h2(class="text-2xl font-semibold text-gray-800") Contact Us
                form.form--contact
                    .form__group.relative.mb-4
                        label.form__label(for="name" class="mt-6 mb-8 text-gray-600") Full Name
                        input#name.form__input(class="relative bg-white m-0 -mr-0.5 block w-full min-w-0 flex-auto rounded border border-solid border-neutral-300 bg-transparent bg-clip-padding px-3 py-[0.25rem] text-base font-normal leading-[1.6] text-gray-700 outline-none transition duration-200 ease-in-out focus:z-[3] focus:border-primary focus:text-neutral-700 focus:shadow-[inset_0_0_0_1px_rgb(59,113,202)] focus:outline-none" type="text", placeholder="Full Name", required)
                    .form__group.relative.mb-4
                        label.form__label(for="email" class="mt-6 mb-8 text-gray-600") Email address
                        input#email.form__input(class="relative bg-white m-0 -mr-0.5 block w-full min-w-0 flex-auto rounded border border-solid border-neutral-300 bg-transparent bg-clip-padding px-3 py-[0.25rem] text-base font-normal leading-[1.6] text-gray-700 outline-none transition duration-200 ease-in-out focus:z-[3] focus:border-primary focus:text-neutral-700 focus:shadow-[inset_0_0_0_1px_rgb(59,113,202)] focus:outline-none" type="email", placeholder="you@example.com", required)
                    .form__group.relative.mb-4
                        label.form__label(for="phone" class="mt-6 mb-8 text-gray-600") Phone Number
                        input#phone.form__input(class="relative bg-white m-0 -mr-0.5 block w-full min-w-0 flex-auto rounded border border-solid border-neutral-300 bg-transparent bg-clip-padding px-3 py-[0.25rem] text-base font-normal leading-[1.6] text-gray-700 outline-none transition duration-200 ease-in-out focus:z-[3] focus:border-primary focus:text-neutral-700 focus:shadow-[inset_0_0_0_1px_rgb(59,113,202)] focus:outline-none" type="phone", placeholder="555-555-5555" required)
                    .form__group.relative.mb-4
                        label.form__label(for="message" class="mt-6 mb-8 text-gray-600") Subject
                        textarea#message.form__input(class="relative resize-none bg-white m-0 -mr-0.5 block w-full min-w-0 flex-auto rounded border border-solid border-neutral-300 bg-transparent h-32 bg-clip-padding px-3 py-[0.25rem] text-base font-normal leading-[1.6] text-gray-700 outline-none transition duration-200 ease-in-out focus:z-[3] focus:border-primary focus:text-neutral-700 focus:shadow-[inset_0_0_0_1px_rgb(59,113,202)] focus:outline-none" placeholder="Message") 
                    .form__group
                        button(class="relative flex h-11 w-full items-center justify-center px-6 before:absolute before:inset-0 before:rounded-full before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95") 
                            span(class="relative text-base font-semibold text-white") Send Message
            
                    