    section#contact-us.text-tc-primary.body-font.relative
        .container.px-5.py-24.mx-auto.flex.sm-flex
            .map-container.lg-w-2-3.md-w-1-2.bg-gray-300.rounded-lg.overflow-hidden.sm-mr-10.p-10.flex.items-end.justify-start.relative
