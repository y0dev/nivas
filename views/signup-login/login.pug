extends ../base

block content
    section.body-font.relative
        div(class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20")
            div(class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700")
            div(class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600")
    .container.px-5.py-24.mx-auto.flex.flex-wrap.items-center.min-h-screen.justify-center
        div(class="lg:w-3/5 md:w-1/2 md:pr-16 lg:pr-0 pr-0")
            h1.title-font.font-medium.text-3xl.text-center Great to have you back!
            p.leading-relaxed.mt-4.w-full.text-center Login and see where you have left off. 
        div(class="group p-6 mt-4 sm:mt-0 sm:p-8 md:w-1/2 w-full rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10")
            h2(class="text-2xl font-semibold text-gray-800 dark:text-white") Login
            .relative.mb-4
            form.form--login
                .form__group.relative.mb-4
                    label.form__label.leading-7.text-sm(for="email-name" class="mt-6 mb-8 text-gray-600 dark:text-gray-300") Email
                    input#email.form__input.w-full.bg-white.rounded.border.border-gray-300.text-base.outline-none.py-1.px-3.leading-8.transition-colors.duration-200.ease-in-out(class="dark:text-gray-900" type="text", placeholder="Email", required)
                .form__group.relative.mb-4
                    label.form__label.leading-7.text-sm(for="password" class="mt-6 mb-8 text-gray-600 dark:text-gray-300") Password
