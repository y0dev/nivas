extends ../base

block content
    section.body-font
    .container.px-5.py-24.mx-auto.flex.flex-wrap.items-center
        //- .lg:w-3/5 md:w-1/2 md:pr-16 lg:pr-0 pr-0
        div
            h1.title-font.font-medium.text-3xl Login
            p.leading-relaxed.mt-4 Lorem ipsum dolor sit, amet consectetur adipisicing elit. Aliquid natus mollitia nostrum aspernatur. 
        .bg-gray-100.rounded-lg.p-8.flex.flex-col.md-ml-auto.lg-w-1-2.mt-10.md-mt-0
