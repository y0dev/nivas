extends ../base

block content
    .404-container.container.min-h-screen
        .px-4.py-24.items-center.flex.justify-center.flex-col-reverse.gap-16(class='lg:px-24 lg:py-24 md:py-20 md:px-44 lg:flex-row md:gap-28')
            .w-full.relative.pb-12(class='xl:pt-24 xl:w-1/2 lg:pb-0')
                .relative
                    img(src='/img/404-2.png')
                    .absolute
                        h1.my-2.text-gray-400.font-bold.text-2xl
                            | Looks like you&apos;ve found the
                            | doorway to the great nothing
                        p.my-2.text-gray-400 Sorry about that! Please visit our homepage to get where you need to go.
                        a#404-home-btn.flex.items-center.mt-auto.text-white.bg-primary.border-0.py-4.px-4.w-full.rounded(href="/" class='focus:outline-none hover:bg-blue-600')
                                | Take Me There
                                svg.w-4.h-4.ml-auto(fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' viewbox='0 0 24 24')
                                    path(d='M5 12h14M12 5l7 7-7 7')
            img(src='/img/disconnect.png')